    <nodo_host id="0" gateway="3">
        <application type="simple_source_tcp" rate="100" TON="100" TOFF="0" port="1234">
            <file size="10" />
        </application>
        
        <interfaces>
            <interface id="0" IP="192.168.1.2/24" canale="0"></interface>
        </interfaces>
        
    </nodo_host>
    
    <nodo_host id="2" gateway="4">
        <application type="simple_receiver_tcp" port="1234">
        </application>
        
        <interfaces>
            <interface id="0" IP="192.168.1.2/24" canale="2"></interface>
        </interfaces>
    </nodo_host>
    
    <router id="3">
        <protocol tipo="OSPF" TTL="1" ROUTING="auto"></protocol>
             
        <interfaces>
            <interface id="0" IP="192.168.2.1/30" canale="1"></interface>
            <interface id="1" IP="192.168.1.1/24" canale="0"></interface>
        </interfaces>
        <vicini>
            <nodo id="1" interface="1"></nodo>
            <nodo id="4" interface="0"></nodo>
