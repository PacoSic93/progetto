    <canale id="0" tipo="WIRED" capacita="5000000" dim_pacchetto = "1526" tempo_propagazione = "10"></canale> 
    <canale id="1" tipo="WIRED" capacita="10000000" dim_pacchetto = "1526" tempo_propagazione = "5"></canale>
