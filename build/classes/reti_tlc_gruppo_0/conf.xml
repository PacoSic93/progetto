        <ramo metrica="1.0" start="1" end="3" tipo="full"></ramo> <!-- PUNTO PUNTO (1<-(1)->3) -->
        <ramo metrica="1.0" start="2" end="4" tipo="full"></ramo> <!-- PUNTO PUNTO (2<-(1)->4) -->
        <ramo metrica="1.0" start="3" end="4" tipo="full"></ramo> <!-- PUNTO PUNTO (3<-(1)->4) -->
